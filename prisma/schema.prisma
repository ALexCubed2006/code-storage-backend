generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id Int @id @default(autoincrement())
  name String @unique
  users User[] 
}

model User {
  id        Int      @id @default(autoincrement())
  email   String   @unique
  password String 
  role    Role  @default(USER)
  group   Group?  @relation(fields: [groupId], references: [id])
  groupId Int?
  name    String?
}

enum Role {
  USER
  ADMIN
}