generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id    Int @id @default(autoincrement())
  name  String @unique
  users User[] @relation()
}

model CodeFiles {
  id Int  @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  path String[]
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String 
  name     String?
  role     Role  @default(USER)
  group    Group?  @relation(fields: [groupId], references: [id])
  groupId  Int? 
  groupRole GroupRole? @default(MEMBER) 
  codeFiles CodeFiles[]
}

enum Role {
  USER
  ADMIN
}

enum GroupRole {
  OWNER
  MEMBER
  MODERATOR
  GUEST
  BANNED
}