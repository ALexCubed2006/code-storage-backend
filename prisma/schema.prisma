generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id      Int    @id @default(autoincrement())
  name    String @unique
  users   User[] @relation()
  usersId Int[]
}

model CodeFile {
  id         Int      @id @default(autoincrement())
  name       String   @default("unnamed")
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  uploadedAt DateTime @default(now())
  path       String
}

model User {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  password    String
  name        String?
  phoneNumber String?
  role        Role       @default(USER)
  group       Group?     @relation(fields: [groupId], references: [id])
  groupId     Int?
  groupRole   GroupRole? @default(MEMBER)
  codeFile    CodeFile[]
}

enum Role {
  USER
  ADMIN
}

enum GroupRole {
  OWNER
  MEMBER
  MODERATOR
  GUEST
  BANNED
}
